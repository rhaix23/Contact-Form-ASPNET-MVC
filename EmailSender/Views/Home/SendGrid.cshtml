@model EmailViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4">Email Sender</h1>
    <hr />
    <form class="w-50" asp-controller="Home" asp-action="SendEmailUsingSendGrid" method="post">
        <div class="mb-3 row">
            <label asp-for="Name" class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>
            <div class="col-sm-8">
                <input asp-for="Email" class="form-control" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Subject" class="col-sm-4 col-form-label">Subject</label>
            <div class="col-sm-8">
                <input asp-for="Subject" class="form-control" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Body" class="col-sm-4 col-form-label">Message</label>
            <div class="col-sm-8">
                <textarea asp-for="Body" class="form-control" rows="3" required></textarea>
            </div>
        </div>
    
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}